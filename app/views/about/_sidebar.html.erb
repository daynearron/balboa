	<aside class ="sidebar">
		<% @posts.each do |post| %>
			<div class="sidebar_card">
				<div class="sidebar_img">
					<%= image_tag post.image.url(:thumb) %>
				</div>
				<%= link_to post, :class=>"sidebar_link" do %>	
					<h2 class="hello"><%= post.title %></h2>
					<%= truncate(post.content, :length => 35) %>
				<%end%>
				</div>
			</div>
		<% end %>
		<% @insurances.each do |insurance| %>
			<div class="sidebar_card">
				<div class="sidebar_img">
					<%= image_tag insurance.image.url(:thumb) %>
				</div>
				<%= link_to insurance, :class=>"sidebar_link" do %>	
					<h2 class="hello"><%= insurance.title %></h2>
					<%= truncate(insurance.description, :length => 35) %>
				<%end%>
				</div>
			</div>
		<% end %>
	</aside>