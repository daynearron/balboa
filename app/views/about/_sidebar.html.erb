	<aside class ="sidebar">
		<div class="cards">
		<% @posts.each do |post| %>
			  <div class="card">
			  	<div class="card-image">
	      		<%= image_tag post.image.url(:medium) %>
	   			</div>
	   			<div class="card-header">
						<%= post.title %>
					</div>
					<div class="card-copy">
			      <p>
							<%= truncate(post.content, :length => 135) %>
						</p>
						<%= link_to "Read More", post %>
					</div>
				</div>
			<% end %>
		</div>
	</aside>