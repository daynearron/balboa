<!-- THIS IS BLOG POSTS NOT QUOTES -->
<section class="gray-text letter-spacing centered skinny_wrapper">
  <h2>
    Find out what we've been up to:
  </h2>
</section>
<div class="cards wrapper">
  <% @posts.each do |post| %>
    <div class="card">
      <div class="card-image">
        <%= image_tag post.image.url(:medium) %>
      </div>
      <div class="card-header">
        <%= post.title %>
      </div>
      <div class="card-copy">
        <p><%= truncate(post.content, :length => 75) %></p>
        <%= link_to "Read More", post, class: "button button-hero" %>
        <i class="icon-right-open-mini button-icon"></i>
      </div>
    </div>
  <% end %>
</div>
