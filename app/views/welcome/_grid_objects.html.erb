<div class="grid-items-lines">
  <% @insurance_grid.each_with_index do |insurance, index| %>
    <%= link_to insurance, :class=>"grid-item", :id =>"welcome-grid-item-#{index}" do %>  
      <% if index == 1 %>
        <%= image_tag insurance.image.url(:large), :class=>"img-swap" %>
        <h1><%= insurance.title %></h1>
        <p><%= insurance.link %></p>
      <% elsif index == 3 %>
        <%= image_tag insurance.image.url(:large), :class=>"img-swap" %>
        <h1><%= insurance.title %></h1>
        <p><%= insurance.link %></p>
      <% else %>
        <h1><%= insurance.title %></h1>
        <p><%= insurance.link %></p>
      <% end %>
    <% end %>
  <% end %>  
  <%= link_to quotes_path, :class=>"grid-item grid-item-big", :id => "welcome-grid-item-big" do %>
    <h1>Give us a try and see the difference.</h1>
    <p>Our objective is to make the process as simple as possible. <i class="icon-right-open-mini"></i></p>    
  <% end %>
</div>


