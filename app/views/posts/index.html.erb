<%= render "hero_index" %>
<article class="wrapper">
	<div class="content_list">
		<% @posts.each do |post| %>
			<%= link_to post, :class => 'content_list_item border-radius' do%>
				<div class="image_wrapper">	
					<!-- #<%= image_tag('bg/elderly-couple.png') %> -->
					<%= image_tag post.image.url(:large) %>
				</div>
				<h2><%= post.title %></h2>
				<p><%= markdown truncate(post.content, :length => 145) %></p>
			<% end %>
		<% end %>
	</div>
	<%= render "sidebar" %>
</article>
