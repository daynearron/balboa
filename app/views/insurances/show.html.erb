<%= render "hero4" %>
<article class="content_well type-system-serif">
	<section class="main post-view">
		<div class="skinny_wrapper--article">
 			<h1 class="hello"><%= @insurance.link%></h1>
			<%= markdown @insurance.description %>
		</div>
		<div id="admin_links">
			<% if user_signed_in? %>
				<%= link_to "Edit", edit_insurance_path(@insurance) %>
				<%= link_to "Delete", insurance_path(@insurance), method: :delete, data: { confirm: "Are you sure?" } %>
			<% end %>
		</div>
	</section>
	<%= render 'sidebar2'%>
</article>
<%= render 'cta' %>
<%= render 'contact_footer' %>