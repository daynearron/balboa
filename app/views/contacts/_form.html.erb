<%= form_for @contact, html: { multipart: true } do |f| %>
	<% if @contact.errors.any? %>
		<h2> <%= pluralize(@contact.errors.count, "error") %> Prevented this Message from Sending: </h2>
		<ul>
			<% @contact.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	</br>

	<%= f.label :name %><br>
	<%= f.text_field :name, required: true %><br>
	<br>
	
	<%= f.label :email %><br>
	<%= f.email_field :email, required: true %><br>

	<br>

	<%= f.label :message %><br>
	<%= f.text_area :message, required: true %><br>

	<br>

	<div class="hidden">
		<%= f.label :nickname %><br>
		<%= f.text_field :nickname, hint: 'leave this field blank' %><br>
	</div>


	<%= f.submit 'Send Message', class: 'button' %>

<% end %>